source 'https://rubygems.org'

gem 'sinatra' # web app library
gem 'activerecord' # the ORM that will talk to database
gem 'sinatra-activerecord' # lib that lets sinatra use activerecord
gem 'rake' # library to run rake db commands
gem 'rack-flash3' #allows us to sent 'flash' messages on request

group :development do 

	gem 'sqlite3' # the SQLite3 adapter
	
end


group :production do
   
   gem 'pg'
 
end
