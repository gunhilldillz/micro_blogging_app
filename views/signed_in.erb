<h2 class="text-center">
<b>  Hello, <%= current_user.fname %> <%= current_user.lname %>. Here are your posts.</b>
</h2>

<hr>

<table class="table table-striped table-bordered table-condensed">
<tr>
  <th>Title</th> 
  <th>Body</th>
  <th>Created</th>
</tr>
<% current_user.posts.order("created_at DESC").each do |post| %>
<tr>
  <td><b><%= post.title %></b></td>
  <td><%= post.body %></td>
  <td><%= post.created_at.strftime("%B %d, %Y") %></td>
</tr>
<% end %>
</table>

<h3> New Post </h3>
<hr>
<form method="POST" action="/create_post" >
  <input type="hidden" name="[post]user_id" value="<%=current_user.id%>">

  <input type="text" name="[post]title" class="input-block-level" placeholder="Title">

	<textarea class="input-block-level" rows="8" input type="text" name="[post]body" class="input-block-level" placeholder="Body"></textarea>

  <button type="submit" class="btn btn-warning pull-right">Submit</button>

</form>
